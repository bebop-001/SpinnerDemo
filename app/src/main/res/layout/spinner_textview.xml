<?xml version="1.0" encoding="utf-8"?>


<!-- The default text is too small you don't have any control
    over text size, color or background.  According to this,
    the work-around is to supply your own textview.
    https://stackoverflow.com/questions/9476665/how-to-change-spinner-text-size-and-text-color
-->
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textColor="#FF0000"
    />
